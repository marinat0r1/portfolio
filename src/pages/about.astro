---
import BaseLayout from "../layouts/BaseLayout.astro";

// Core philosophies of the developer extracted for consistency
const philosophies = [
  { title: "Strategy First", text: "Every line of code serves a business objective." },
  { title: "Excellence", text: "Fast, secure, and accessible by default." }
];
---

<BaseLayout title="About â€” The Vision Behind the Code" description="Learn about my philosophy of digital excellence and how I help businesses succeed online.">
  <div class="container section-py">
    <div class="about-grid">
      <div class="about-text">
        <h1 class="hero-title mb-8">Crafting <span class="text-gradient">Digital Success</span></h1>
        <p class="text-secondary text-xl mb-6 leading-relaxed">
          I'm a developer who believes that a website should be more than just a digital business card. It should be your hardest-working employee.
        </p>
        <p class="text-secondary text-lg mb-12 leading-relaxed">
          With a background in performance-driven development and user-centric design, I specialize in bridging the gap between complex technology and business goals.
        </p>
        
        <!-- Development Philosophy Cards -->
        <div class="philosophy-cards">
          {philosophies.map((p) => (
            <div class="p-6 glass">
              <h3>{p.title}</h3>
              <p class="text-muted">{p.text}</p>
            </div>
          ))}
        </div>

        <section id="contact" class="glass p-10 mt-12 border-white/10">
          <h2 class="text-2xl font-bold mb-4">Let's Build Something Great</h2>
          <p class="text-secondary mb-8">Ready to grow your business with a premium website?</p>
          <div class="flex gap-4 items-center">
            <a href="mailto:hincum@gmail.com" class="btn btn-primary">Book a Call</a>
            <a href="#" class="text-muted hover:text-white transition-colors">LinkedIn</a>
          </div>
        </section>
      </div>
      
      <div class="about-visual">
         <div class="visual-placeholder glass">
            <span>MH</span>
         </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .hero-title {
    font-size: 4.5rem;
    letter-spacing: -0.05em;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-12);
    align-items: center;
  }

  .visual-placeholder {
    aspect-ratio: 1;
    display: grid;
    place-items: center;
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-text-muted);
  }

  .text-xl { font-size: 1.25rem; }
  .text-lg { font-size: 1.125rem; }
  .leading-relaxed { line-height: 1.6; }
  .p-6 { padding: 1.5rem; }
  .p-10 { padding: 2.5rem; }
  .flex { display: flex; }
  .items-center { align-items: center; }
  .gap-4 { gap: 1rem; }
  .mb-8 { margin-bottom: 2rem; }
  .mb-12 { margin-bottom: 3rem; }
  .mt-12 { margin-top: 3rem; }

  /* --- Responive Grid for Philosophies --- */
  .philosophy-cards {
     display: grid;
     grid-template-columns: repeat(2, 1fr);
     gap: var(--space-4);
  }

  @media (max-width: 968px) {
    .about-grid { grid-template-columns: 1fr; }
    .about-visual { order: -1; max-width: 300px; margin-inline: auto; }
  }

  @media (max-width: 600px) {
    .philosophy-cards {
       grid-template-columns: 1fr;
    }
    .hero-title {
       font-size: 3rem;
    }
  }
</style>