---
import BaseLayout from "../layouts/BaseLayout.astro";
import CustomerTypeGame from "../components/CustomerTypeGame.astro";
---

<BaseLayout title="YourName â€” Portfolio" description="Developer portfolio">
  <section slot="fullbleed" class="landing-hero">
    <div class="landing-hero__inner">
      <h1 class="landing-hero__title">
        <span class="text-color-blue" >Your</span> Website<br />Done <span class="text-color-blue">Right</span>
      </h1>
      <p class="landing-hero__subtitle">
        I design and build fast, modern sites for your business.
      </p>
    </div>
    <div class= "landing-hero__inner cta-buttons">
      <a class="btn btn-primary" href="#">
        Contact Me
        <span class="arrow" aria-hidden="true">
          <!-- cleaner chevron arrow -->
          <svg viewBox="0 0 24 24" class="arrow-icon">
            <path d="M9 6l6 6-6 6" />
          </svg>
        </span>
      </a>
      
      <!-- TODO: Use astro components rather then css -->
      <a class="btn btn-secondary" href="#">Go to Packages</a>
    </div>
  </section>

  <section slot="fullbleed" class="landing-hero">
    <img
    src="/website-process-hero-2.svg"
    alt="From idea to live website: Plan, Design, Code, Launch"
    width="1200"
    height="675"
    loading="lazy"
  />
  </section>

  <section class="container">
    <section class="card">
      <h2>Who are you?</h2>
      <CustomerTypeGame />
    </section>

    <section class="card">
      <h2>What I do</h2>
      <p class="muted">Websites, landing pages, performance, SEO basics, maintenance.</p>
    </section>
  </section>
</BaseLayout>