---
import BaseLayout from "../layouts/BaseLayout.astro";
import RubiksCube from "../components/RubiksCube.astro";

// Core value propositions extracted for clean, maintainable rendering
const values = [
  {
    title: "Precision Engineering",
    description: "I build with a focus on code quality, ensuring your site is maintainable, scalable, and resilient."
  },
  {
    title: "Extreme Performance",
    description: "A fast site isn't a luxury—it's a requirement. I optimize every byte for lightning-fast interactions."
  },
  {
    title: "Minimalist Design",
    description: "Clutter is the enemy of conversion. I design interfaces that are purposeful and elegantly simple."
  }
];
---

<BaseLayout title="MH — Solving Business Complexity" description="Modern web design and development for forward-thinking businesses.">
  <section slot="fullbleed" class="hero-section">
    <div class="hero-content container">
      <div class="hero-text">
        <h1 class="hero-title">
          Solving <span class="text-gradient">Business Complexity</span>
        </h1>
        <p class="hero-subtitle">
          I build high-performance, minimalist websites that turn complex problems into elegant digital solutions.
        </p>
        <div class="hero-actions">
          <a class="btn btn-primary" href="/services">Start a Project</a>
          <a class="btn btn-secondary" href="/projects">View Work</a>
        </div>
      </div>
      <div class="hero-visual">
          <RubiksCube />
      </div>
    </div>
  </section>

  <!-- Business Value Proposition -->
  <section class="business-value container">
    <div class="value-grid">
      {values.map((val) => (
        <div class="value-card">
          <h3>{val.title}</h3>
          <p>{val.description}</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>