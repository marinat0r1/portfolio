---
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
  {
    title: "Project One",
    desc: "Short description of what it does.",
    href: "https://example.com",
    tags: ["TypeScript", "Astro"],
  },
  {
    title: "Project Two",
    desc: "Another thing you built.",
    href: "https://example.com",
    tags: ["Node", "API"],
  },
];
---

<BaseLayout title="Projects — YourName">
  <h1>Projects</h1>

  <div class="grid">
    {projects.map((p) => (
      <article class="card">
        <h2>{p.title}</h2>
        <p>{p.desc}</p>
        <ul class="tags">
          {p.tags.map((t) => <li>{t}</li>)}
        </ul>
        <p><a href={p.href} target="_blank" rel="noreferrer">Link →</a></p>
      </article>
    ))}
  </div>
</BaseLayout>